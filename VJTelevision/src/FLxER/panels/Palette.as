package FLxER.panels {	import flash.display.Sprite;	import FLxER.main.Rett;	import FLxER.main.Txt;	public class Palette extends Sprite {		var fondo,fondino,fondo2:Rett;		public var palette:Sprite;		public var tit,txt:Txt;		public function Palette(w:int,h:int,t:String,tt:String=""):void {			fondo = new Rett(0, 0, Preferences.pref.w, Preferences.pref.h, Preferences.pref.myCol.bkgCol, -1, .6);			this.addChild(fondo);			palette = new Sprite();			palette.x = int((Preferences.pref.w-w)/2);			palette.y = int((Preferences.pref.h-h)/2);			this.addChild(palette);			fondino = new Rett(0, 0, w, h, Preferences.pref.myCol.brdCol, Preferences.pref.myCol.col, .8);			this.palette.addChild(fondino);			fondo2 = new Rett(0, 0, w, 23, Preferences.pref.myCol.brdCol, Preferences.pref.myCol.col, 1);			this.palette.addChild(fondo2);			tit = new Txt(2, -4, 200, 30, t, Preferences.pref.ts, null);			this.palette.addChild(tit);			tit.scaleX = tit.scaleY = 2;			if (tt!="") {				txt = new Txt(5, 25, w-10, 0, tt, Preferences.pref.ts, null);				this.palette.addChild(txt);			}		}	}}